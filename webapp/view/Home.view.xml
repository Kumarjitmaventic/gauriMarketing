<mvc:View xmlns:upload="sap.m.upload" xmlns:plugins="sap.m.plugins"
    controllerName="marketingcampaign.zcrmktmarketingcampaign.controller.Home"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    height="100%"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:t="sap.ui.table"
    xmlns:mdc="sap.ui.mdc"
    xmlns:mdct="sap.ui.mdc.table"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:ff="sap.f"
    xmlns="sap.m"
    xmlns:vm="sap.ui.fl.variants"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
    
        <f:SimpleForm
            id="SimpleFormChange354wideDual"
            editable="true"
            layout="ResponsiveGridLayout"
            title="Employe Details"
            labelSpanXL="4"
            labelSpanL="4"
            labelSpanM="12"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="2"
            columnsM="1"
            singleContainerFullSize="false"
        >
            <f:content>
                <core:Title
                    id="_IDGenTitle1"
                    text=""
                />
                <Label
                    id="_IDGenLabel"
                    text="Personal No"
                />
                <Input
                    id="name"
                    value="{empModel>/empDetail/Id}"
                    editable="false"
                />
                <Label
                    id="_IDGenLabel1"
                    text="Designation"
                />
                <Input
                    id="_IDGenInput"
                    editable="false"
                    value="{empModel>/empDetail/Designation}"
                />

                <Label
                    id="_IDGenLabel2"
                    text="Grade"
                />
                <Input
                    id="_IDGenInput2"
                    editable="false"
                    value="{empModel>/empDetail/Grade}"
                />

                <Label
                    id="_IDGenLabel3"
                    text="Cost Center"
                />
                <Input
                    id="_IDGenInput3"
                    editable="false"
                    value="{empModel>/empDetail/CostCenter}"
                />
                <core:Title
                    id="_IDGenTitle2"
                    text=""
                />
                <Label
                    id="_IDGenLabel4"
                    text="Employee Name"
                />
                <Input
                    id="_IDGenInput4"
                    editable="false"
                    value="{empModel>/empDetail/Name}"
                />
                <Label
                    id="_IDGenLabel5"
                    text="Department"
                />
                <Input
                    id="_IDGenInput5"
                    editable="false"
                    value="{empModel>/empDetail/Department}"
                />
                <Label
                    id="_IDGenLabel6"
                    text="Company Code"
                />
                <Input
                    id="_IDGenInput6"
                    editable="false"
                    value="{empModel>/empDetail/CompanyCode}"
                />
            </f:content>
        </f:SimpleForm>
        <f:SimpleForm
            id="SimpleFormChange354wideDual2"
            editable="true"
            layout="ResponsiveGridLayout"
            title="Permit Detalis"
            labelSpanXL="4"
            labelSpanL="4"
            labelSpanM="12"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsXL="2"
            columnsL="2"
            columnsM="1"
            singleContainerFullSize="false"
        >
            <f:content>
                <Label
                    id="_IDGenLabel10"
                    text="Permit Type"
                />
                <ComboBox id="_IDGenComboBox"    change="onSelectionPermit" editable="{=${empModel>/empDetail/Role}==='Marketing'}">
                    <items>
                        <core:Item
                            id="_IDGenItem1"
                            key="SPECIAL OFFER"
                            text="Special Offer"
                        />
                        <core:Item
                            id="_IDGenItem2"
                            key="RAFFLE DRAW"
                            text="Raffle Draw"
                        />
                        <core:Item
                            id="_IDGenItem3"
                            key="SCRATCH &amp; WIN"
                            text="Scratch &amp; Win"
                        />
                        <core:Item
                            id="_IDGenItem4"
                            key="SALES"
                            text="Sales"
                        />
                        <core:Item
                            id="_IDGenItem5"
                            key="ADVERTISING STICKERS"
                            text="Advertising Stickers"
                        />
                    </items>
                </ComboBox>
            </f:content>
        </f:SimpleForm>
        <f:SimpleForm
           title="Attachments"
            singleContainerFullSize="false"
        >
            <f:content>
               
                <Table id="idProductsTable" mode="MultiSelect"
		inset="false"
		items="{docModel>/Document}" showRowCount="10" >
		<headerToolbar>
    <OverflowToolbar>
        <content>
            <ToolbarSpacer /> <!-- Pushes content to the right -->
            <Button  text="Upload" press="onUploadFiles" enabled="{=${empModel>/empDetail/Role}==='Marketing' || ${empModel>/empDetail/Role}==='Approver'}"/>
            <Button text="Download" press="onDownloadFiles"/>
            <Button text ="Delete" press="onDeleteFile" enabled="{=${empModel>/empDetail/Role}==='Marketing'  || ${empModel>/empDetail/Role}==='Approver'}"/>
        </content>
    </OverflowToolbar>
</headerToolbar>
		
		<columns>
			<Column minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="File Name" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Doc Type" />
			</Column>
			
		</columns>
		<items >
			<ColumnListItem vAlign="Middle" >
				<cells>
					
					<Text
						text="{docModel>FileName}" />
					<Text
						text="{docModel>DocType}" />
                    
					
				</cells>
			</ColumnListItem>
		</items>
	</Table>
            </f:content>
            
        </f:SimpleForm>
       <f:SimpleForm
           title="Comments"
            singleContainerFullSize="true"
        >
            <f:content>
               <TextArea id="commentBox" rows="5" value="{docModel>/comment}" placeholder="Enter your comment here..." editable="{= ${empModel>/empDetail/Role}==='Marketing' || ${empModel>/empDetail/Role}==='Approver'}"/>
               <TextArea id="commentBox1" rows="5" value="{docModel>/comment}" placeholder="Enter your comment here..." editable="{= ${empModel>/empDetail/Role}==='Approver'}" visible="{= ${empModel>/empDetail/Role}==='Approver'}"/>
             
            </f:content>
            
        </f:SimpleForm>
        <footer>
            <OverflowToolbar id="_IDGenOverflowToolbar">
                <Bar id="_IDGenBar">
                    <contentRight>
                        <Button id="_IDGenButton1"
                            text="Submit Request"
                            type="Emphasized"
                            visible="{=${empModel>/empDetail/Role}==='Marketing'}"
                            press="onSubReq"
                        />
                        <Button id="_IDGenButton2"
                            text="Approve Request"
                            type="Emphasized"
                            visible="{=${empModel>/empDetail/Role}==='Approver'}"
                            press="onAppReq"
                        />
                         <Button id="_IDGenButton4"
                            text="Reject Request"
                            type="Emphasized"
                            visible="{=${empModel>/empDetail/Role}==='Approver'}"
                            press="onAppReq"
                        />
                        <Button id="_IDGenButton3"
                            text="Cancel"
                            type="Default"
                            visible="{=${empModel>/empDetail/Role}==='Marketing'}"
                            press="onClear"
                        />
                    </contentRight>
                </Bar>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
